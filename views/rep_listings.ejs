<!DOCTYPE html>
<html>

<head>
    <meta charset="ISO-8859-1">
    <title>View Listings</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.25/css/dataTables.bootstrap5.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js" type="text/javascript"></script>
</head>
<body>
    <%- include('Common/cr_header2.ejs') %>
    <div class="container mt-5">
        <div align="center">
            <br> <br>
            <h1 class="text-center mx-auto">Item Listings</h1>
            <br>
        </div> 
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Listing ID</th>
                    <th>Item ID</th>
                    <th>Seller ID</th>
                    <th>Price</th>
                    <th>Quantity</th>

                    <!-- Add more columns as needed -->
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% rep_listings.forEach(listing => { %>
                    <tr>
                        <td><%= listing.listingId %></td>
                        <td><%= listing.itemId %></td>
                        <td><%= listing.sellerId %></td>
                        <td><%= listing.price %></td>
                        <td><%= listing.quantity%></td>
                        <!-- Add more columns as needed -->
                        <td>
                            <form style="display: inline;" method="post" action="/customer_representative/rep_listings/delete/<%= listing.listingId %>">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                            <a href="/customer_representative/rep_listings/modify/<%= listing.listingId %>">
                                <button type="button" class="btn btn-primary">Modify</button>
                            </a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS and DataTables JS -->
    <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.25/js/dataTables.bootstrap5.min.js"></script>
    
    <!-- DataTables initialization script -->
    <script>
        $(document).ready(function() {
            $('table').DataTable();
        });
    </script>
</body>
</html>

