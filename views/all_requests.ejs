<!DOCTYPE html>
<html>

<head>
    <meta charset="ISO-8859-1">
    <title>All Requests</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.25/css/dataTables.bootstrap5.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js" type="text/javascript"></script>
</head>

<body>
    <%- include('Common/cr_header.ejs') %>
    <div align="center">
        <br> <br>
        <h1 class="text-primary text-center mx-auto">All Requests</h1>
        <br>
    </div> 
    <div align="center">
        <br>
        <h2 class="text-primary text-left mx-auto">View and Claim Requests</h2>
        <%if(typeof serializedRequests !== 'undefined' && serializedRequests !== 'null'){%>
            <table class="table table-bordered" id="endUserRequests" cellspacing="0" width="100%">
                <thead>
                    <th width="5%">Request ID</th>
                    <th width="10%">User</th>
                    <th width="5%">Listing ID</th>
                    <th>Description</th>
                    <th width="10%">Created On</th>
                    <th width="2%">Status</th>
                    <th>CR</th>
                    <th>Updated On</th>
                    <th>Claim</th>
                </thead>
                <tbody>
                    
                    <%serializedRequests.forEach((y) => {%>
                        <tr>
                            <td><%=y.requestId%></td>
                            <td><%=y.userId%></td>
                            <td><%=y.listingId%></td>
                            <td><%=y.updateDescription%></td>
                            <td><%=y.createdOn%></td>
                            <td><%=y.currentStatus%></td>
                            <td><%=y.customerRep%></td>
                            <td><%=y.updatedn%></td>
                            <td><form method="POST" action="/customer_representative/claim-request">
                                <input type="hidden" name="reqID" value="<%=y.requestId%>"></input>
                                <button type="submit" class="btn btn-primary align-self-center">Claim</button>
                            </form></td></tr>
                            
                        </th>
                    <%})%>
                    <%}%>
                </tbody>
            </table>
        <br>
    </div>

</body>

</html>
