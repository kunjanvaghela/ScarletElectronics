<!DOCTYPE html>
<html>

<head>
    <meta charset="ISO-8859-1">
    <title>Modify Listing</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.25/css/dataTables.bootstrap5.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js" type="text/javascript"></script>
</head>
<body class="bg-light">
    <%- include('Common/cr_header.ejs') %>

    <div class="container mt-5">
        <div align="center">
            
            <h1 class="text-center mx-auto">Modify Listing</h1>
        
        </div> 
        <form method="post" action="/customer_representative/rep_listings/modify/<%= listing.listingId %>">
            <div class="mb-3">
                <label for="itemId" class="form-label">Item ID:</label>
                <input type="text" id="itemId" name="itemId" value="<%= listing.itemId %>" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="sellerId" class="form-label">Seller ID:</label>
                <input type="text" id="sellerId" name="sellerId" value="<%= listing.sellerId %>" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price:</label>
                <input type="text" id="price" name="price" value="<%= listing.price %>" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="created_on" class="form-label">Created On:</label>
                <input type="text" id="created_on" name="created_on" value="<%= new Date(listing.created_on).toISOString().slice(0, 19).replace("T", " ") %>" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="created_by" class="form-label">Created By:</label>
                <input type="text" id="created_by" name="created_by" value="<%= listing.created_by %>" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="remarks" class="form-label">Remarks:</label>
                <input type="text" id="remarks" name="remarks" value="<%= listing.remarks %>" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="updated_by" class="form-label">Updated By:</label>
                <input type="text" id="updated_by" name="updated_by" value="<%= listing.updated_by %>" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="updated_on" class="form-label">Updated On:</label>
                <input type="text" id="updated_on" name="updated_on" value="<%= new Date().toISOString().slice(0, 19).replace("T", " ") %>" class="form-control" required readonly>
            </div>
            <div class="mb-3">
                <label for="quantity" class="form-label">Quantity:</label>
                <input type="text" id="quantity" name="quantity" value="<%= listing.quantity %>" class="form-control" required>
            </div>
            <!-- Add more input fields for other attributes as needed -->

            <button type="submit" class="btn btn-primary">Modify Listing</button>
        </form>
    </div>
</body>
</html>
